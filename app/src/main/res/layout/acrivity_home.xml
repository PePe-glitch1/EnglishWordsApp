<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvStartScreenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:gravity="center"
        android:layout_marginTop="164dp"
        android:text="@string/text_start_screen"
        android:textColor="@color/text_color"
        android:textSize="50sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btStartLearn"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nunito_bold"
        android:background="@drawable/shape_button_footer"
        android:textColor="@color/white"
        android:text="@string/buton_start_studying"
        android:backgroundTint="@color/trueColor"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStartScreenText" />

    <android.widget.Button
        android:id="@+id/btProgressLearn"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nunito_bold"
        android:background="@drawable/shape_button_footer"
        android:textColor="@color/white"
        android:text="@string/button_progres_learn"
        android:backgroundTint="@color/trueColor"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btStartLearn" />

    <android.widget.Button
        android:id="@+id/btSettingsApp"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_button_footer"
        android:backgroundTint="@color/trueColor"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/button_settings"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btProgressLearn" />
        " />

</androidx.constraintlayout.widget.ConstraintLayout>